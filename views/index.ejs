<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Animals List</title>
  <link rel="stylesheet" href="/static/style.css">
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="header-content">
        <h1>Animals</h1>
        <p>A list of all the animals in your account including their ID, name, kind, birth date, death date, date added, and age.</p>
      </div>
      <div class="header-controls">
        <input type="text" id="search" placeholder="Search animals..." aria-label="Search" class="search-input">
        <button type="button" class="add-button">Add animal</button>
      </div>
    </div>
    <div class="table-container">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Kind</th>
            <th>Birth Date</th>
            <th>Death Date</th>
            <th>Date Added</th>
            <th>Age</th>
          </tr>
        </thead>
        <tbody id="animal-list">
          <% animals.forEach(animal => { %>
          <tr>
            <td><%= animal.id %></td>
            <td><%= animal.name %></td>
            <td><%= animal.kind %></td>
            <td><%= animal.birthDate %></td>
            <td><%= animal.deathDate ? animal.deathDate : 'N/A' %></td>
            <td><%= animal.dateAdded %></td>
            <td><%= animal.age %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>

  <script>
    let debounceTimer;

    document.getElementById('search').addEventListener('input', function () {
      clearTimeout(debounceTimer);
      debounceTimer = setTimeout(() => {
        fetchAnimals(this.value);
      }, 300);
    });

    function fetchAnimals(query) {
      fetch(`http://localhost:3000/search?name=${encodeURIComponent(query)}`)
        .then(response => response.json())
        .then(data => updateTable(data))
        .catch(error => console.error('Error fetching data:', error));
    }

    function updateTable(animals) {
      const tableBody = document.getElementById('animal-list');
      tableBody.innerHTML = '';

      animals.forEach(animal => {
        const row = document.createElement('tr');
        row.innerHTML = `
          <td>${animal.id}</td>
          <td>${animal.name}</td>
          <td>${animal.kind}</td>
          <td>${animal.birthDate}</td>
          <td>${animal.deathDate ? animal.deathDate : 'N/A'}</td>
          <td>${animal.dateAdded}</td>
          <td>${animal.age}</td>
        `;
        tableBody.appendChild(row);
      });
    }
  </script>
</body>
</html>
